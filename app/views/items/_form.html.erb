<% if flash[:errors].present?  %>
   <strong>Please correct the following errors:</strong>
   <ol>
   <% flash[:errors].each do |error| %>
     <li><%= error %></li>
     <br>
     <br>
     <br>
   <% end %>
   </ol>
<% end %>

<%= form_for @item, html: {multipart: true} do |f| %>
  <p>
  <%= f.label :summary %><br>
  <%= f.text_field :summary, size: 52 %>
  </p>
  <p>
  <%= f.label :description %><br>
  <%= f.text_area :description,cols: 50, rows: 10 %>
  </p>
  <p>
   <%= f.label :item_image, 'Item Image'  %><br>
   <%= f.cl_image_upload :item_image %>
  </p>
  <p>
   <%= f.label :qty %><br>
   <%= f.number_field :qty %>
  </p>

  <p>
  <%= f.label :category_id, 'Category' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Please choose or edit a category:' %>
  </p>
  <p>
  <%= f.label :address %><br>
  <%= f.text_field :address %>
  </p>
  <p>
  <%= f.submit 'Submit', :class => 'button'%>
  </p>

<% end %>
